<UserControl x:Class=" ThingLing.WPF.Controls.TabItemHeader"
             x:ClassModifier="public"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             mc:Ignorable="d"
             d:DesignHeight="300" d:DesignWidth="300" 
             Height="20" Margin="0,0,3,3" Padding="2">
    <DockPanel>
        <Image x:Name="ContentIcon" DockPanel.Dock="Left" Height="15" />
        <TextBlock x:Name="ContentChanged" Text=" * " FontWeight="UltraBold"
                   DockPanel.Dock="Left"  Padding="0,0,5,0" />
        <Border x:Name="CloseButton" BorderThickness="1" BorderBrush="Transparent" DockPanel.Dock="Right"
                ToolTip="Close"
                MouseEnter="Border_MouseEnter"
                MouseLeave="Border_MouseLeave"
                MouseLeftButtonUp="CloseWindow_MouseLeftButtonUp">
            <Image Source="Images/close.png" Height="15" />
        </Border>
        <Border x:Name="HideButton" x:FieldModifier="public"
                BorderThickness="1" BorderBrush="Transparent" DockPanel.Dock="Right"
                ToolTip="Hide" Visibility="Collapsed"
                MouseEnter="Border_MouseEnter"
                MouseLeave="Border_MouseLeave">
            <Image Source="Images/minimize.png" Height="15" />
        </Border>
        <Border x:Name="MenuButton" x:FieldModifier="public"
                BorderThickness="1" BorderBrush="Transparent" DockPanel.Dock="Right"
                ToolTip="Menu" Visibility="Collapsed"
                MouseEnter="Border_MouseEnter"
                MouseLeave="Border_MouseLeave"
                MouseLeftButtonUp="WindowMenu_MouseLeftButtonUp">
